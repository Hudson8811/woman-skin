extends ../layouts/default

block vars
	-
		const page = {
			title: 'Главная'
		};

block main
	section.first-screen(style='background-image: url("images/pattern.png")')
		.first-screen__mobile.show-block
			.show-block__image
				img.show-block__woman(src="images/woman.png", srcset="images/woman@2x.png 2x", width="884", height="1323", alt="")
				img.show-block__ball(src="images/balls/2.png", srcset="images/balls/2@2x.png 2x", alt="")
			.show-block__bottom
				.show-block__title <span>Как понять, что нужно</span> <br> вашей коже?
				+button('Узнать', 'show-block__btn', './test.html')
		.first-screen__desktop
			img.first-screen__logo.first-screen__logo--1(src="images/nuskin-logo.png", srcset="images/nuskin-logo@2x.png 2x", width="177", height="124", alt="")
			img.first-screen__logo.first-screen__logo--2(src="images/nuskin-logo.png", srcset="images/nuskin-logo@2x.png 2x", width="177", height="124", alt="")
			.container
				.first-screen__title На каком <span>"языке"</span> говорит <br> <span>ваша кожа?</span>
				+button('Узнать', 'first-screen__btn', './test.html')
				.first-screen__image
					img(src="images/paper.jpg", srcset="images/paper@2x.jpg 2x", width="998", height="763", alt="")
					include ../blocks/show-block.pug
